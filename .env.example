# Environment variables for bitchat backend

# Server
PORT=3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bitchat

# JWT Secret (change this in production!)
JWT_SECRET=bitchat-dev-secret-change-in-production

# Redis (for presence - optional for Phase 1)
REDIS_URL=redis://localhost:6379

# Node environment
NODE_ENV=development
